<?xml version="1.0" encoding="UTF-8"?>

<run>
    <params>
        <!--"/etc/rsyslog.conf /home/my/srdDir /home/my/destDir /home/my/srdDir2 /home/my/destDir2"-->
        <param type="syslog">
            <file>rsyslog.conf</file>
            <items>
                <item>
                    <regex><![CDATA[\n\s?(?<mark>\#+)?\s?(?<facility>\*|\w+)\.(?<level>\*|\w+)\s+((?<tcp>\@@)|(?<udp>\@))(?<ip>\d+\.\d+\.\d+\.\d+)\:(?<port>\d+)]]></regex>
                    <!-- * | auth | authpriv | daemon | user | local0 | local1 | local2 | local3 | local4 | local5 | local6 | local7 -->
                    <facility>*</facility>
                    <!-- * | emerg | alert | crit | err | warning | notice | info | debug -->
                    <level>alert</level>
                    <proto>udp</proto>
                    <ip>127.0.0.1</ip>
                    <port>514</port>
                </item>
                <item>
                    <regex><![CDATA[\n\s?(?<mark>\#+)?\s?(?<facility>\*|\w+)\.(?<level>\*|\w+)\s+((?<tcp>\@@)|(?<udp>\@))(?<ip>\d+\.\d+\.\d+\.\d+)\:(?<port>\d+)]]></regex>
                    <!-- * | auth | authpriv | daemon | user | local0 | local1 | local2 | local3 | local4 | local5 | local6 | local7 -->
                    <facility>*</facility>
                    <!-- * | emerg | alert | crit | err | warning | notice | info | debug -->
                    <level>alert</level>
                    <proto>tcp</proto>
                    <ip>127.0.0.2</ip>
                    <port>514</port>
                </item>
            </items>
        </param>
        <param type="so" file="ld.so.conf">
            <items>
                <item>/usr/local/lib64</item>
            </items>
            <items>
                <item>/usr/local/lib642</item>
            </items>
        </param>
        <param type="ids">
            <items>
                <item type="directory">
                    <src>ids1</src>
                    <dst>ids2</dst>
                </item>
                <item type="lib64">
                    <src>lib64</src>
                    <dst>lib642</dst>
                </item>
            </items>
        </param>
        <param type="shell">
            <items  encode="utf-8">
                <item>
                    <command>cmd /c dir -l</command>
                </item>
                <item>
                    <command>sh -c dir -l</command>
                </item>
            </items>
        </param>
    </params>
</run>